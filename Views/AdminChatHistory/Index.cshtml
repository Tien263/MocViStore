@model Exe_Demo.Models.ViewModels.ChatHistoryViewModel
@{
    ViewData["Title"] = "Lịch Sử Chat AI";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-comments"></i> Lịch Sử Chat AI
                    </h4>
                </div>
                <div class="card-body">
                    <!-- Statistics -->
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <div class="card bg-info text-white">
                                <div class="card-body">
                                    <h5 class="card-title">Tổng Số Phiên Chat</h5>
                                    <h2 class="mb-0">@Model.TotalSessions</h2>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-success text-white">
                                <div class="card-body">
                                    <h5 class="card-title">Tổng Tin Nhắn</h5>
                                    <h2 class="mb-0">@Model.TotalMessages</h2>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-warning text-white">
                                <div class="card-body">
                                    <h5 class="card-title">Có Đơn Hàng</h5>
                                    <h2 class="mb-0">@Model.Sessions.Count(s => s.HasOrderRelated)</h2>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- Chat Sessions Table -->
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Session ID</th>
                                    <th>Khách Hàng</th>
                                    <th>Thời Gian</th>
                                    <th>Số Tin Nhắn</th>
                                    <th>Trạng Thái</th>
                                    <th>Thao Tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Sessions.Any())
                                {
                                    @foreach (var session in Model.Sessions)
                                    {
                                        <tr>
                                            <td>
                                                <small class="text-muted">@session.SessionId.Substring(0, Math.Min(20, session.SessionId.Length))...</small>
                                            </td>
                                            <td>
                                                @if (session.CustomerId.HasValue)
                                                {
                                                    <span class="badge bg-primary">
                                                        <i class="fas fa-user"></i> @session.CustomerName
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">
                                                        <i class="fas fa-user-secret"></i> Khách vãng lai
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <div>
                                                    <small class="text-muted">Bắt đầu:</small><br>
                                                    <strong>@session.StartTime.ToString("dd/MM/yyyy HH:mm")</strong>
                                                </div>
                                                <div class="mt-1">
                                                    <small class="text-muted">Kết thúc:</small><br>
                                                    <strong>@session.EndTime.ToString("dd/MM/yyyy HH:mm")</strong>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@session.MessageCount tin nhắn</span>
                                            </td>
                                            <td>
                                                @if (session.HasOrderRelated)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-shopping-cart"></i> Có đơn hàng
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-light text-dark">Tư vấn</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@session.SessionId" 
                                                   class="btn btn-sm btn-primary" title="Xem chi tiết">
                                                    <i class="fas fa-eye"></i> Xem
                                                </a>
                                                <button type="button" class="btn btn-sm btn-danger" 
                                                        onclick="confirmDelete('@session.SessionId')" title="Xóa">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center py-4">
                                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                            <p class="text-muted">Chưa có lịch sử chat nào</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    @if (Model.TotalPages > 1)
                    {
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center">
                                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)">Trước</a>
                                </li>
                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                                        <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                                    </li>
                                }
                                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)">Sau</a>
                                </li>
                            </ul>
                        </nav>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Form -->
<form id="deleteForm" method="post" asp-action="Delete" style="display: none;">
    @Html.AntiForgeryToken()
    <input type="hidden" id="deleteSessionId" name="id" />
</form>

@section Scripts {
    <script>
        function confirmDelete(sessionId) {
            if (confirm('Bạn có chắc muốn xóa lịch sử chat này?\n\nSession: ' + sessionId.substring(0, 30) + '...')) {
                document.getElementById('deleteSessionId').value = sessionId;
                document.getElementById('deleteForm').submit();
            }
        }
    </script>
}
