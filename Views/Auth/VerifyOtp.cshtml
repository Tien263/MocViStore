@model Exe_Demo.Models.ViewModels.VerifyOtpViewModel
@{
    ViewData["Title"] = "Xác Thực OTP";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <title>Xác Thực OTP - Mộc Vị Store</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #4f6a4c 0%, #6b8f67 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .otp-container {
            max-width: 500px;
            width: 100%;
            background: white;
            border-radius: 20px;
            padding: 50px 40px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            text-align: center;
        }

        .logo {
            margin-bottom: 30px;
        }

        .logo img {
            max-width: 120px;
        }

        .icon-wrapper {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #4f6a4c 0%, #6b8f67 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
        }

        .icon-wrapper i {
            font-size: 36px;
            color: white;
        }

        h2 {
            color: #4f6a4c;
            font-size: 28px;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .subtitle {
            color: #666;
            margin-bottom: 30px;
            font-size: 14px;
        }

        .email-display {
            background: #f8f9fa;
            padding: 12px;
            border-radius: 10px;
            margin-bottom: 25px;
            color: #4f6a4c;
            font-weight: 600;
        }

        .form-group {
            margin-bottom: 25px;
            text-align: left;
        }

        .form-group label {
            display: block;
            color: #333;
            font-weight: 500;
            margin-bottom: 8px;
            font-size: 14px;
        }

        .otp-input-wrapper {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-bottom: 25px;
        }

        .otp-digit {
            width: 50px;
            height: 60px;
            text-align: center;
            font-size: 24px;
            font-weight: bold;
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            transition: all 0.3s;
        }

        .otp-digit:focus {
            outline: none;
            border-color: #4f6a4c;
            box-shadow: 0 0 0 3px rgba(79, 106, 76, 0.1);
        }

        .hidden-input {
            position: absolute;
            opacity: 0;
            pointer-events: none;
        }

        .btn-verify {
            width: 100%;
            padding: 14px;
            background: #4f6a4c;
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            margin-bottom: 20px;
        }

        .btn-verify:hover {
            background: #3d5239;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(79, 106, 76, 0.3);
        }

        .btn-verify:disabled {
            background: #ccc;
            cursor: not-allowed;
            transform: none;
        }

        .resend-link {
            text-align: center;
            margin-top: 20px;
            font-size: 14px;
            color: #666;
        }

        .resend-link a {
            color: #4f6a4c;
            text-decoration: none;
            font-weight: 600;
        }

        .resend-link a:hover {
            text-decoration: underline;
        }

        .back-link {
            text-align: center;
            margin-top: 15px;
        }

        .back-link a {
            color: #999;
            text-decoration: none;
            font-size: 14px;
        }

        .back-link a:hover {
            color: #4f6a4c;
        }

        .alert {
            padding: 12px;
            border-radius: 8px;
            margin-bottom: 20px;
            font-size: 14px;
        }

        .alert-success {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .alert-danger {
            background: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        .text-danger {
            color: #dc3545;
            font-size: 13px;
            margin-top: 5px;
            display: block;
        }

        .timer {
            color: #4f6a4c;
            font-weight: 600;
            margin-top: 10px;
        }

        .timer.expired {
            color: #dc3545;
        }
    </style>
</head>
<body>
    <div class="otp-container">
        <div class="logo">
            <img src="~/images/logo_1_1.png" alt="Mộc Vị Store">
        </div>

        <div class="icon-wrapper">
            <i class="fas fa-envelope-open-text"></i>
        </div>

        <h2>XÁC THỰC OTP</h2>
        <p class="subtitle">Chúng tôi đã gửi mã OTP đến email của bạn</p>

        <div class="email-display">
            <i class="fas fa-envelope"></i> @Model.Email
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            </div>
        }

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle"></i>
                <span asp-validation-summary="All"></span>
            </div>
        }

        <form asp-action="VerifyOtp" asp-controller="Auth" method="post" id="otpForm">
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="OtpCode" id="hiddenOtpInput" />

            <div class="form-group">
                <label>Nhập mã OTP (6 số)</label>
                <div class="otp-input-wrapper">
                    <input type="text" maxlength="1" class="otp-digit" data-index="0" />
                    <input type="text" maxlength="1" class="otp-digit" data-index="1" />
                    <input type="text" maxlength="1" class="otp-digit" data-index="2" />
                    <input type="text" maxlength="1" class="otp-digit" data-index="3" />
                    <input type="text" maxlength="1" class="otp-digit" data-index="4" />
                    <input type="text" maxlength="1" class="otp-digit" data-index="5" />
                </div>
                <span asp-validation-for="OtpCode" class="text-danger"></span>
            </div>

            <div class="timer" id="timer">
                <i class="fas fa-clock"></i> Mã OTP có hiệu lực: <span id="countdown">5:00</span>
            </div>

            <button type="submit" class="btn-verify" id="verifyBtn">
                <i class="fas fa-check-circle"></i> Xác Thực
            </button>
        </form>

        <div class="resend-link">
            Không nhận được mã? <a href="@Url.Action("Register", "Auth")">Đăng ký lại</a>
        </div>

        <div class="back-link">
            <a href="@Url.Action("Index", "Home")">
                <i class="fas fa-arrow-left"></i> Về trang chủ
            </a>
        </div>
    </div>

    <script>
        // OTP Input Handler
        const otpInputs = document.querySelectorAll('.otp-digit');
        const hiddenInput = document.getElementById('hiddenOtpInput');
        const verifyBtn = document.getElementById('verifyBtn');

        otpInputs.forEach((input, index) => {
            input.addEventListener('input', (e) => {
                const value = e.target.value;
                
                if (value.length === 1 && index < otpInputs.length - 1) {
                    otpInputs[index + 1].focus();
                }

                updateHiddenInput();
            });

            input.addEventListener('keydown', (e) => {
                if (e.key === 'Backspace' && !e.target.value && index > 0) {
                    otpInputs[index - 1].focus();
                }
            });

            input.addEventListener('paste', (e) => {
                e.preventDefault();
                const pastedData = e.clipboardData.getData('text').slice(0, 6);
                
                pastedData.split('').forEach((char, i) => {
                    if (otpInputs[i]) {
                        otpInputs[i].value = char;
                    }
                });

                updateHiddenInput();
                otpInputs[Math.min(pastedData.length, 5)].focus();
            });
        });

        function updateHiddenInput() {
            const otp = Array.from(otpInputs).map(input => input.value).join('');
            hiddenInput.value = otp;
            verifyBtn.disabled = otp.length !== 6;
        }

        // Countdown Timer
        let timeLeft = 300; // 5 minutes
        const timerElement = document.getElementById('countdown');
        const timerWrapper = document.getElementById('timer');

        const countdown = setInterval(() => {
            timeLeft--;
            
            const minutes = Math.floor(timeLeft / 60);
            const seconds = timeLeft % 60;
            
            timerElement.textContent = `${minutes}:${seconds.toString().padStart(2, '0')}`;
            
            if (timeLeft <= 0) {
                clearInterval(countdown);
                timerWrapper.classList.add('expired');
                timerElement.textContent = 'Đã hết hạn';
                verifyBtn.disabled = true;
                alert('Mã OTP đã hết hạn! Vui lòng đăng ký lại.');
            }
        }, 1000);

        // Focus first input on load
        otpInputs[0].focus();
    </script>
</body>
</html>
