@model Exe_Demo.Models.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "Thông Tin Cá Nhân";
}

<style>
    .profile-hero {
        background-image: url('/images/bg_1.jpg');
        background-size: cover;
        background-position: 50% 50%;
        background-attachment: fixed;
        position: relative;
        min-height: 100vh;
        padding: 50px 0;
    }
    
    .profile-hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(79, 106, 76, 0.85);
        z-index: 1;
    }
    
    .profile-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 0 20px;
        position: relative;
        z-index: 2;
    }
    
    .profile-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        overflow: hidden;
    }
    
    .profile-header {
        background: linear-gradient(135deg, #4f6a4c 0%, #6b8f67 100%);
        color: white;
        padding: 40px;
        text-align: center;
    }
    
    .profile-avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        background: white;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        font-size: 50px;
        color: #4f6a4c;
        font-weight: bold;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }
    
    .profile-name {
        font-size: 28px;
        font-weight: 700;
        margin-bottom: 5px;
    }
    
    .profile-email {
        font-size: 16px;
        opacity: 0.9;
    }
    
    .profile-body {
        padding: 40px;
    }
    
    .info-section {
        margin-bottom: 30px;
    }
    
    .section-title {
        color: #4f6a4c;
        font-size: 20px;
        font-weight: 700;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 2px solid #4f6a4c;
    }
    
    .info-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        margin-bottom: 15px;
    }
    
    .info-item {
        padding: 15px;
        background: #f8f9fa;
        border-radius: 8px;
    }
    
    .info-label {
        font-size: 13px;
        color: #666;
        margin-bottom: 5px;
        font-weight: 500;
    }
    
    .info-value {
        font-size: 16px;
        color: #333;
        font-weight: 600;
    }
    
    .loyalty-badge {
        display: inline-block;
        background: linear-gradient(135deg, #FFD700, #FFA500);
        color: white;
        padding: 5px 15px;
        border-radius: 20px;
        font-weight: 700;
        font-size: 18px;
    }
    
    .btn-edit {
        background: #4f6a4c;
        color: white;
        padding: 12px 30px;
        border-radius: 8px;
        text-decoration: none;
        display: inline-block;
        font-weight: 600;
        transition: all 0.3s;
    }
    
    .btn-edit:hover {
        background: #3d5239;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(79, 106, 76, 0.3);
    }
    
    .alert-success {
        background: #d4edda;
        color: #155724;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
        border: 1px solid #c3e6cb;
    }
    
    @@media (max-width: 768px) {
        .info-row {
            grid-template-columns: 1fr;
        }
        
        .profile-header {
            padding: 30px 20px;
        }
        
        .profile-body {
            padding: 30px 20px;
        }
    }
</style>

<div class="profile-hero">
    <div class="profile-container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert-success">
                <i class="fa fa-check-circle"></i> @TempData["SuccessMessage"]
            </div>
        }
        
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert-danger" style="background: #f8d7da; color: #721c24; padding: 15px; border-radius: 8px; margin-bottom: 20px; border: 1px solid #f5c6cb;">
                <i class="fa fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            </div>
        }
        
        <div class="profile-card">
        <!-- Header -->
        <div class="profile-header">
            <div class="profile-avatar" style="position: relative;">
                @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
                {
                    <img src="@Model.ProfileImageUrl" alt="Profile" style="width: 100%; height: 100%; object-fit: cover; border-radius: 50%;" />
                }
                else
                {
                    @Model.FullName.Substring(0, 1).ToUpper()
                }
                
                <!-- Upload button -->
                <label for="profileImageInput" style="position: absolute; bottom: 0; right: 0; background: #4f6a4c; color: white; width: 35px; height: 35px; border-radius: 50%; display: flex; align-items: center; justify-content: center; cursor: pointer; box-shadow: 0 2px 5px rgba(0,0,0,0.3);">
                    <i class="fa fa-camera"></i>
                </label>
            </div>
            <div class="profile-name">@Model.FullName</div>
            <div class="profile-email">@Model.Email</div>
            
            <!-- Hidden form for upload -->
            <form asp-action="UploadProfileImage" method="post" enctype="multipart/form-data" id="uploadForm" style="display: none;">
                <input type="file" id="profileImageInput" name="profileImage" accept="image/*" onchange="document.getElementById('uploadForm').submit();" />
            </form>
        </div>
        
        <!-- Body -->
        <div class="profile-body">
            <!-- Thông tin tài khoản -->
            <div class="info-section">
                <h3 class="section-title">
                    <i class="fa fa-user"></i> Thông Tin Tài Khoản
                </h3>
                <div class="info-row">
                    <div class="info-item">
                        <div class="info-label">Mã khách hàng</div>
                        <div class="info-value">@(Model.CustomerCode ?? "Chưa có")</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Loại khách hàng</div>
                        <div class="info-value">@(Model.CustomerType ?? "Thường")</div>
                    </div>
                </div>
                <div class="info-row">
                    <div class="info-item">
                        <div class="info-label">Điểm tích lũy</div>
                        <div class="info-value">
                            <span class="loyalty-badge">@(Model.LoyaltyPoints ?? 0) điểm</span>
                        </div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Ngày tham gia</div>
                        <div class="info-value">@(Model.CreatedDate?.ToString("dd/MM/yyyy") ?? "N/A")</div>
                    </div>
                </div>
            </div>
            
            <!-- Thông tin liên hệ -->
            <div class="info-section">
                <h3 class="section-title">
                    <i class="fa fa-phone"></i> Thông Tin Liên Hệ
                </h3>
                <div class="info-row">
                    <div class="info-item">
                        <div class="info-label">Số điện thoại</div>
                        <div class="info-value">@(Model.PhoneNumber ?? "Chưa cập nhật")</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Email</div>
                        <div class="info-value">@Model.Email</div>
                    </div>
                </div>
            </div>
            
            <!-- Địa chỉ -->
            <div class="info-section">
                <h3 class="section-title">
                    <i class="fa fa-map-marker"></i> Địa Chỉ
                </h3>
                <div class="info-row">
                    <div class="info-item">
                        <div class="info-label">Địa chỉ</div>
                        <div class="info-value">@(Model.Address ?? "Chưa cập nhật")</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Phường/Xã</div>
                        <div class="info-value">@(Model.Ward ?? "Chưa cập nhật")</div>
                    </div>
                </div>
                <div class="info-row">
                    <div class="info-item">
                        <div class="info-label">Quận/Huyện</div>
                        <div class="info-value">@(Model.District ?? "Chưa cập nhật")</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Tỉnh/Thành phố</div>
                        <div class="info-value">@(Model.City ?? "Chưa cập nhật")</div>
                    </div>
                </div>
            </div>
            
            <!-- Hoạt động -->
            <div class="info-section">
                <h3 class="section-title">
                    <i class="fa fa-clock-o"></i> Hoạt Động
                </h3>
                <div class="info-row">
                    <div class="info-item">
                        <div class="info-label">Đăng nhập lần cuối</div>
                        <div class="info-value">@(Model.LastLoginDate?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Trạng thái</div>
                        <div class="info-value" style="color: #28a745;">
                            <i class="fa fa-check-circle"></i> Đang hoạt động
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Actions -->
            <div class="text-center" style="margin-top: 30px;">
                <a asp-action="Edit" class="btn-edit">
                    <i class="fa fa-edit"></i> Chỉnh Sửa Thông Tin
                </a>
            </div>
        </div>
        </div>
    </div>
</div>
