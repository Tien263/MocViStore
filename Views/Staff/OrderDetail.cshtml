@model Exe_Demo.Models.ViewModels.OrderDetailViewModel
@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2>Chi Tiết Đơn Hàng</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Orders" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Thông tin đơn hàng -->
        <div class="col-md-8 mb-4">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Thông Tin Đơn Hàng</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Mã đơn hàng:</strong> @Model.Order.OrderCode
                        </div>
                        <div class="col-md-6">
                            <strong>Loại đơn:</strong> @Model.Order.OrderType
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Ngày tạo:</strong> @Model.Order.CreatedDate?.ToString("dd/MM/yyyy HH:mm")
                        </div>
                        <div class="col-md-6">
                            <strong>Nhân viên xử lý:</strong> @(Model.Employee?.FullName ?? "Chưa có")
                        </div>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Thông Tin Khách Hàng</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-2">
                        <div class="col-md-6">
                            <strong>Họ tên:</strong> @Model.Order.CustomerName
                        </div>
                        <div class="col-md-6">
                            <strong>Số điện thoại:</strong> @Model.Order.CustomerPhone
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Order.CustomerEmail))
                    {
                        <div class="row mb-2">
                            <div class="col-md-12">
                                <strong>Email:</strong> @Model.Order.CustomerEmail
                            </div>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Order.ShippingAddress))
                    {
                        <div class="row mb-2">
                            <div class="col-md-12">
                                <strong>Địa chỉ:</strong> @Model.Order.ShippingAddress
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <strong>Khu vực:</strong> @Model.Order.Ward, @Model.Order.District, @Model.Order.City
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Chi Tiết Sản Phẩm</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th>Đơn giá</th>
                                    <th>Số lượng</th>
                                    <th>Giảm giá</th>
                                    <th class="text-end">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderDetails)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="@(item.Product?.ImageUrl ?? "/images/product_1.jpg")" 
                                                     alt="@item.ProductName" class="rounded me-2" 
                                                     style="width: 50px; height: 50px; object-fit: cover;">
                                                <div>@item.ProductName</div>
                                            </div>
                                        </td>
                                        <td>@item.Price.ToString("N0") đ</td>
                                        <td>@item.Quantity</td>
                                        <td>@(item.DiscountPercent ?? 0)%</td>
                                        <td class="text-end"><strong>@item.TotalPrice.ToString("N0") đ</strong></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tóm tắt & Trạng thái -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Tóm Tắt Đơn Hàng</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Tạm tính:</span>
                        <strong>@Model.Order.TotalAmount.ToString("N0") đ</strong>
                    </div>
                    @if (Model.Order.ShippingFee > 0)
                    {
                        <div class="d-flex justify-content-between mb-2">
                            <span>Phí vận chuyển:</span>
                            <strong>@Model.Order.ShippingFee.Value.ToString("N0") đ</strong>
                        </div>
                    }
                    @if (Model.Order.DiscountAmount > 0)
                    {
                        <div class="d-flex justify-content-between mb-2 text-danger">
                            <span>Giảm giá:</span>
                            <strong>-@Model.Order.DiscountAmount.Value.ToString("N0") đ</strong>
                        </div>
                    }
                    <hr>
                    <div class="d-flex justify-content-between mb-3">
                        <strong>Tổng cộng:</strong>
                        <h5 class="text-primary mb-0">@Model.Order.FinalAmount.ToString("N0") đ</h5>
                    </div>
                    <div class="mb-2">
                        <strong>Phương thức thanh toán:</strong><br>
                        @Model.Order.PaymentMethod
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Cập Nhật Trạng Thái</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Trạng thái đơn hàng:</label>
                        <select id="orderStatus" class="form-select">
                            <option value="Chờ xác nhận" selected="@(Model.Order.OrderStatus == "Chờ xác nhận")">Chờ xác nhận</option>
                            <option value="Đang xử lý" selected="@(Model.Order.OrderStatus == "Đang xử lý")">Đang xử lý</option>
                            <option value="Đang giao" selected="@(Model.Order.OrderStatus == "Đang giao")">Đang giao</option>
                            <option value="Đã hoàn thành" selected="@(Model.Order.OrderStatus == "Đã hoàn thành")">Đã hoàn thành</option>
                            <option value="Đã hủy" selected="@(Model.Order.OrderStatus == "Đã hủy")">Đã hủy</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Trạng thái thanh toán:</label>
                        <select id="paymentStatus" class="form-select">
                            <option value="Chưa thanh toán" selected="@(Model.Order.PaymentStatus == "Chưa thanh toán")">Chưa thanh toán</option>
                            <option value="Đã thanh toán" selected="@(Model.Order.PaymentStatus == "Đã thanh toán")">Đã thanh toán</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Ghi chú:</label>
                        <textarea id="note" class="form-control" rows="3">@Model.Order.Note</textarea>
                    </div>
                    <button type="button" class="btn btn-primary w-100" onclick="updateOrderStatus()">
                        <i class="fas fa-save"></i> Cập Nhật
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function updateOrderStatus() {
            const data = {
                orderId: @Model.Order.OrderId,
                orderStatus: document.getElementById('orderStatus').value,
                paymentStatus: document.getElementById('paymentStatus').value,
                note: document.getElementById('note').value
            };

            fetch('/Staff/UpdateOrderStatus', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(result => {
                if (result.success) {
                    alert(result.message);
                    location.reload();
                } else {
                    alert(result.message);
                }
            })
            .catch(error => {
                alert('Có lỗi xảy ra: ' + error);
            });
        }
    </script>
}
