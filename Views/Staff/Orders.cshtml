@model Exe_Demo.Models.ViewModels.OrderManagementViewModel
@{
    ViewData["Title"] = "Quản lý đơn hàng";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2>Quản Lý Đơn Hàng</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Dashboard" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>

    <!-- Bộ lọc -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form method="get" asp-action="Orders">
                <div class="row g-3">
                    <div class="col-md-3">
                        <input type="text" name="search" class="form-control" 
                               placeholder="Tìm mã đơn, tên, SĐT..." value="@Model.SearchTerm">
                    </div>
                    <div class="col-md-2">
                        <select name="status" class="form-select">
                            <option value="">Tất cả trạng thái</option>
                            <option value="Chờ xác nhận" selected="@(Model.StatusFilter == "Chờ xác nhận")">Chờ xác nhận</option>
                            <option value="Đang xử lý" selected="@(Model.StatusFilter == "Đang xử lý")">Đang xử lý</option>
                            <option value="Đang giao" selected="@(Model.StatusFilter == "Đang giao")">Đang giao</option>
                            <option value="Đã hoàn thành" selected="@(Model.StatusFilter == "Đã hoàn thành")">Đã hoàn thành</option>
                            <option value="Đã hủy" selected="@(Model.StatusFilter == "Đã hủy")">Đã hủy</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <select name="paymentStatus" class="form-select">
                            <option value="">Thanh toán</option>
                            <option value="Chưa thanh toán" selected="@(Model.PaymentStatusFilter == "Chưa thanh toán")">Chưa thanh toán</option>
                            <option value="Đã thanh toán" selected="@(Model.PaymentStatusFilter == "Đã thanh toán")">Đã thanh toán</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <input type="date" name="fromDate" class="form-control" 
                               value="@Model.FromDate?.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="col-md-2">
                        <input type="date" name="toDate" class="form-control" 
                               value="@Model.ToDate?.ToString("yyyy-MM-dd")">
                    </div>
                    <div class="col-md-1">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Danh sách đơn hàng -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Mã đơn</th>
                            <th>Khách hàng</th>
                            <th>Số điện thoại</th>
                            <th>Loại đơn</th>
                            <th>Tổng tiền</th>
                            <th>Thanh toán</th>
                            <th>Trạng thái</th>
                            <th>Ngày tạo</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.Orders)
                        {
                            <tr>
                                <td><strong>@order.OrderCode</strong></td>
                                <td>@order.CustomerName</td>
                                <td>@order.CustomerPhone</td>
                                <td>
                                    @if (order.OrderType == "Trực tiếp")
                                    {
                                        <span class="badge bg-info">@order.OrderType</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@order.OrderType</span>
                                    }
                                </td>
                                <td><strong>@order.FinalAmount.ToString("N0") đ</strong></td>
                                <td>
                                    @if (order.PaymentStatus == "Đã thanh toán")
                                    {
                                        <span class="badge bg-success">@order.PaymentStatus</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">@order.PaymentStatus</span>
                                    }
                                </td>
                                <td>
                                    @if (order.OrderStatus == "Đã hoàn thành")
                                    {
                                        <span class="badge bg-success">@order.OrderStatus</span>
                                    }
                                    else if (order.OrderStatus == "Chờ xác nhận")
                                    {
                                        <span class="badge bg-warning text-dark">@order.OrderStatus</span>
                                    }
                                    else if (order.OrderStatus == "Đang xử lý" || order.OrderStatus == "Đang giao")
                                    {
                                        <span class="badge bg-info">@order.OrderStatus</span>
                                    }
                                    else if (order.OrderStatus == "Đã hủy")
                                    {
                                        <span class="badge bg-danger">@order.OrderStatus</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@order.OrderStatus</span>
                                    }
                                </td>
                                <td>@order.CreatedDate?.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    <a asp-action="OrderDetail" asp-route-id="@order.OrderId" 
                                       class="btn btn-sm btn-outline-primary" title="Xem chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <div class="card-footer bg-white">
                <nav>
                    <ul class="pagination justify-content-center mb-0">
                        @if (Model.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Orders" 
                                   asp-route-page="@(Model.CurrentPage - 1)"
                                   asp-route-search="@Model.SearchTerm"
                                   asp-route-status="@Model.StatusFilter"
                                   asp-route-paymentStatus="@Model.PaymentStatusFilter"
                                   asp-route-fromDate="@Model.FromDate?.ToString("yyyy-MM-dd")"
                                   asp-route-toDate="@Model.ToDate?.ToString("yyyy-MM-dd")">Trước</a>
                            </li>
                        }

                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-action="Orders" 
                                   asp-route-page="@i"
                                   asp-route-search="@Model.SearchTerm"
                                   asp-route-status="@Model.StatusFilter"
                                   asp-route-paymentStatus="@Model.PaymentStatusFilter"
                                   asp-route-fromDate="@Model.FromDate?.ToString("yyyy-MM-dd")"
                                   asp-route-toDate="@Model.ToDate?.ToString("yyyy-MM-dd")">@i</a>
                            </li>
                        }

                        @if (Model.CurrentPage < Model.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Orders" 
                                   asp-route-page="@(Model.CurrentPage + 1)"
                                   asp-route-search="@Model.SearchTerm"
                                   asp-route-status="@Model.StatusFilter"
                                   asp-route-paymentStatus="@Model.PaymentStatusFilter"
                                   asp-route-fromDate="@Model.FromDate?.ToString("yyyy-MM-dd")"
                                   asp-route-toDate="@Model.ToDate?.ToString("yyyy-MM-dd")">Sau</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>
